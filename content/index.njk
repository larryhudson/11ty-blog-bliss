---
layout: base
eleventyExcludeFromCollections: true
pagination:
  data: collections.publishedPosts
  size: 10
  alias: posts
permalink: "{% if pagination.pageNumber > 0 %}/{{ pagination.pageNumber + 1 }}{% endif %}/index.html"
---

<div class="post-list">
  <ul>
  {% for post in posts %}
    <li>
      {% include "partials/single-post-excerpt.njk" %}
    </li>
  {% endfor %}
  </ul>
</div>

<div id="my-element">Testing</div>
<script>
const el = document.getElementById('my-element');
el.addEventListener('click', function myFunction() {
    console.log("hello")
})
</script>

<p style="color: black; background-color: #011">Colour contrast?</p>

<ul>
  <div>crappy list</div>
</ul>

{% include "partials/scroll-up-arrow.njk" %}

